{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/socket.io/(.*)", "dest": "/api/chat.js" },
    { "src": "/waiting-room", "dest": "/public/chat.html" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "/stickers/(.*)", "dest": "/public/stickers/$1" },
    { "src": "/music/(.*)", "dest": "/public/music/$1" },
    { "src": "^/index.html", "dest": "/public/index.html" },
    { "src": "^/chat.html", "dest": "/public/chat.html" },
    { "src": "/(.+)", "dest": "/public/$1" }
  ],
  "headers": [
    {
      "source": "/socket.io/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "*" }
      ]
    }
  ]
} 