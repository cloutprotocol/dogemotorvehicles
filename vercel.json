{
  "version": 2,
  "builds": [
    {
      "src": "chat-server.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "chat-server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "chat-server.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    {
      "src": "/",
      "dest": "index.html"
    },
    {
      "src": "/waiting-room",
      "dest": "chat.html"
    },
    {
      "src": "/(.*)",
      "dest": "chat-server.js"
    }
  ]
} 