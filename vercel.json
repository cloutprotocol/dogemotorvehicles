{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/socket.io/(.*)", "dest": "/api/chat.js" },
    { "src": "/waiting-room", "dest": "/public/chat.html" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^/index.html", "dest": "/public/index.html" },
    { "src": "^/chat.html", "dest": "/public/chat.html" },
    { "src": "/(.+)", "dest": "/public/$1" }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 