{
  "version": 2,
  "builds": [
    {
      "src": "chat-server.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "/chat-server.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,POST,OPTIONS",
        "Access-Control-Allow-Headers": "*"
      }
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/waiting-room",
      "dest": "/chat.html"
    },
    {
      "src": "/(.*)",
      "dest": "/chat-server.js"
    }
  ]
} 