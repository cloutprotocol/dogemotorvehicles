{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/socket.io/(.*)", "dest": "/api/chat.js" },
    { "src": "/waiting-room", "dest": "/public/chat.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
} 